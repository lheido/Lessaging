<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >
    <View
        android:id="@+id/spacing_top"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_alignLeft="@+id/message"
        android:layout_alignStart="@+id/message"
        android:layout_alignRight="@+id/message"
        android:layout_alignEnd="@+id/message"
        android:background="@android:color/transparent" />

    <ImageView
        android:layout_below="@id/spacing_top"
        android:id="@+id/m_pict"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:contentDescription="@string/mms_desc" />
    <TextView
        android:id="@+id/message"
        android:minWidth="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/m_pict"
        android:layout_alignStart="@id/m_pict"
        android:layout_alignRight="@id/m_pict"
        android:layout_alignEnd="@id/m_pict"
        android:padding="14dp"
        android:layout_below="@id/m_pict"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="13sp"
        android:textColor="#DDDDDD" />
    <TextView
        android:id="@+id/date_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="12sp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:textColor="#999999"
        android:layout_alignRight="@id/message"
        android:layout_alignEnd="@id/message"
        android:layout_alignBottom="@id/message" />

    <View android:id="@+id/is_read"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_toLeftOf="@id/date_message"
        android:layout_toStartOf="@id/date_message"
        android:layout_alignBottom="@id/message"
        android:layout_marginBottom="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginEnd="4dip"
        android:background="#00000000" />

    <View
        android:id="@+id/border_bottom_sms"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignLeft="@id/message"
        android:layout_alignStart="@id/message"
        android:layout_alignRight="@id/message"
        android:layout_alignEnd="@id/message"
        android:layout_below="@id/message"
        android:background="#000000" />
    <View
        android:id="@+id/spacing_bottom"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_alignLeft="@id/message"
        android:layout_alignStart="@id/message"
        android:layout_alignRight="@id/message"
        android:layout_alignEnd="@id/message"
        android:layout_below="@id/border_bottom_sms"
        android:background="@android:color/transparent" />


</RelativeLayout>